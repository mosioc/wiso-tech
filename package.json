{
  "name": "wiso-tech",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,css,md}\"",
    "test": "turbo test",
    "lint-staged": "lint-staged",
    "check-types": "turbo run check-types",
    "prepare": "husky install",
    "postinstall": "turbo run build --filter=@repo/prisma-config",
    "build:ordered": "pnpm build:prisma && pnpm build:gql && pnpm build:ui && pnpm build:apps",
    "build:prisma": "turbo run generate --filter=@repo/prisma-config",
    "build:gql": "turbo build --filter=@repo/graphql",
    "build:ui": "turbo build --filter=@repo/ui",
    "build:apps": "turbo build --filter=back-end --filter=front-end"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/format": "^20.0.0",
    "baseline-browser-mapping": "^2.8.32",
    "chalk": "4.1.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-etc": "^2.0.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
