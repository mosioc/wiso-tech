{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@/*": ["./src/*"],
      "@config/*": ["src/config/*"],
      "@features/*": ["src/features/*"],
      "@shared/*": ["src/shared/*"],
      "@styles/*": ["src/styles/*"]
    },
    "moduleResolution": "bundler"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
